---
import Header from "@/components/Header.astro"
import AsideMenu from "@/components/AsideMenu.astro"

// Supports weights 100-900
import '@fontsource-variable/onest';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Personal portfolio based on the project made by midudev" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo_favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <AsideMenu />
    <slot />
  </body>
</html>

<style is:global>
  html {
    color-scheme: dark light;
    font-family: 'Onest Variable', sans-serif, system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  body {
    padding: 2rem;
  }
  h1 {
    font-size: 1.5rem;
    font-weight: 500;
    margin-block: 16px;
    text-wrap: pretty;
  }
  h2 {
    text-wrap: pretty;
  }
  p {
    text-wrap: pretty;
  }
  @media (min-width: 1024px) {
    body {
      width: 1024px;
      margin: 0 auto;
      padding: 0;
    }
    main {
      width: 80ch;
      margin: 102px auto 0;
    }
    h1 {
      margin-block: 24px;
      font-size: 2rem;
      font-weight: 600;
    }
  }
  @media (prefers-color-scheme: dark) {
    body {
      /* background-color: #101116; */
      background: rgb(4,4,6);
      background: radial-gradient(circle, rgba(4,4,6,1) 26%, rgba(26,23,45,1) 86%, rgba(20,20,20,1) 97%);
    }
  }
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
