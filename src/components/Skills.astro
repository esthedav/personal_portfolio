---
import SkillsIcon from "@/Icons/SkillsIcon.astro"
import { skills } from "@cv"


---


<section id="skills" class="my-16">

  <header class="flex gap-4 ml-[-12px] items-center mb-8">
    <SkillsIcon class="size-8" />
    <h2 class="text-2xl font-semibold ">
      Skills
    </h2>
  </header>

  <div class="flex flex-wrap gap-2">
    {
      skills.map(({name}) => {
        return (
          <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400">{name}</span>

        )
      })
    }

  </div>


</section>
